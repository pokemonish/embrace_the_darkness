<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">
    <div class="title title_center">Scoreboard</div>
    <div>
        
    </div>
    <div class="scoreboard field">
        <fest:for iterate="json.users" index="i">
            <p>
                <fest:value>json.users.models[i].attributes.name</fest:value> -
                <fest:value>json.users.models[i].attributes.score</fest:value>
            </p>
        </fest:for>
    </div>
    
    <div class="field">
        <button class="btn btn-primary menu-btn field__btn">Menu</button>
    </div>
    
</fest:template>

