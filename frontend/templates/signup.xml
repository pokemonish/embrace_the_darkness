<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">
    
    <div class="title title_center">Signup</div>

    <div class="login input_data">
        <form class="signup__form" id="signup__form">
            <!-- field -->
            <div class="field">
                <div class="field__in email-field">
                    <input class="input" name="email" type="text" placeholder="Email" required="" />
                </div>
                <div class="field__error email-field__error">
                </div>
            </div>
            <!-- field -->
            <div class="field">
                <div class="field__in password-field">
                    <input class="input" name="password" type="text" placeholder="Password" required="" />
                </div>
                <div class="field__error password-field__error">
                </div>
            </div>
            <!-- field -->
            <div class="field">
                <button class="btn login__btn btn-success field__btn" id="signup">Signup</button>
            </div>
        </form>
    </div>
    
    <div class="field">
        <button class="btn btn-primary menu-btn field__btn">Menu</button>
    </div>
    
    
</fest:template>

