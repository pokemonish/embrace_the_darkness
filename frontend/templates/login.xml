<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
<div class="login-form">
    <ul class="login-form__tab-group">
        <li class="tab active"><a href="#signup">Sign Up</a></li>
        <li class="tab"><a href="#login">Log In</a></li>
    </ul>
      
    <div class="login-form__tab-content">
        <div id="signup">   
            <form id="signup_form" action="/api/v1/auth/signup" method="post">
                <div class="login-form__field-wrap">
                    <label>
                        Nickname<span class="login-form__req">*</span>
                    </label>
                    <input type="text" name="nickname" required="" autocomplete="off"/>
                </div>

                <div class="login-form__field-wrap">
                    <label>
                        Email Address<span class="login-form__tab-group">*</span>
                    </label>
                    <input type="email" name="email" required="" autocomplete="off"/>
                </div>
                  
                <div class="login-form__field-wrap">
                    <label>
                        Set A Password<span class="login-form__req">*</span>
                    </label>
                    <input type="password" name="password" required="" autocomplete="off"/>
                </div>
                  
                <button type="submit" class="login-form__button login-form__button_block" >Get Started</button>      
            </form>
        </div>
        
        <div id="login">
            <form id="login_form" action="/api/v1/auth/signin" method="post">
                <div class="login-form__field-wrap">
                    <label>
                        Email Address<span class="login-form__req">*</span>
                    </label>
                    <input type="email" name="email" required="" autocomplete="off"/>
                </div>
                  
                <div class="login-form__field-wrap">
                    <label>
                        Password<span class="login-form__req">*</span>
                    </label>
                    <input type="password" name="password" required="" autocomplete="off"/>
                </div>
              
                <button type="submit" class="login-form__button login-form__button_block" >Log In</button>
            </form>

        </div>
        
    </div>

</div>
    
<p><a href="#">MENU</a></p>
</fest:template>

